@model IEnumerable<Taller_programacion.Models.Equipo>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:darkgray">Equipos</h1>

<p>
    <a asp-action="Create" class="btn btn-danger">Create New</a>
</p>
<table class="table" style="background-color:aqua">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ciudad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AceptaExtranjero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estadio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ciudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AceptaExtranjero)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Estadio.Nombre)
            </td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.IdEquipo">Edit</a> 
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdEquipo">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdEquipo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
